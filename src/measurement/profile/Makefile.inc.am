## base

PROFILE_FLAGS =                                 \
    $(AM_CPPFLAGS)                              \
    -I$(INC_ROOT)src/measurement/profile        \
    -I$(INC_ROOT)src/measurement/include        \
    -I$(INC_ROOT)src/services                   \
    -I$(INC_ROOT)src/measurement                \
    -I$(INC_ROOT)src/measurement/cube_writer    \
    -I$(PUBLIC_INC_DIR)                         \
    -I$(INC_DIR_OTF2)                           \
    -I$(INC_DIR_UTIL)                           \
    -I$(INC_DIR_VENDOR_HASH)

noinst_LTLIBRARIES += libscorep_profile_base.la
libscorep_profile_base_la_SOURCES =                                    \
    $(SRC_ROOT)src/measurement/profile/SCOREP_Profile.h                \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_metric.h         \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_metric.c         \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_node.h           \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_node.c           \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_definition.h     \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_definition.c     \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_process.h        \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_expand.c         \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_tausnap_writer.c \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_writer.h         \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_callpath.c       \
    $(SRC_ROOT)src/measurement/profile/scorep_profile_cube4_writer.c

libscorep_profile_base_la_CPPFLAGS = $(PROFILE_FLAGS)


## non omp

noinst_LTLIBRARIES += libscorep_profile_non_omp.la
libscorep_profile_non_omp_la_SOURCES =                               \
    $(SRC_ROOT)src/measurement/profile/SCOREP_Profile.c

libscorep_profile_non_omp_la_CPPFLAGS = $(PROFILE_FLAGS)
libscorep_profile_non_omp_la_LIBADD = libscorep_profile_base.la

## omp 

if OPENMP_SUPPORTED
noinst_LTLIBRARIES += libscorep_profile_omp.la
libscorep_profile_omp_la_SOURCES =                                   \
    $(SRC_ROOT)src/measurement/profile/SCOREP_Profile.c 
libscorep_profile_omp_la_CFLAGS   = $(AM_CFLAGS) $(OPENMP_CFLAGS)
libscorep_profile_omp_la_CPPFLAGS =  $(PROFILE_FLAGS)
libscorep_profile_omp_la_LIBADD = libscorep_profile_base.la
endif


## include Online Access only when building on ALTIX

if PLATFORM_ALTIX
libscorep_profile_base_la_SOURCES += 	$(SRC_ROOT)src/measurement/profile/SCOREP_Profile_OAConsumer.h	\
										$(SRC_ROOT)src/measurement/profile/SCOREP_Profile_OAConsumer.c
endif
