<?xml version="1.0" encoding="UTF-8"?>
<toolset.01>
<tool name="Score-P">
    <compile>
        <allcompilers command="scorep" group="scorep"/>
    </compile>
    <analyze foralllike="profile.cubex" depth="1">
        <utility type="view" command="cube" group="cube">
            <argument value="%%FILE%%"/>
        </utility>
    </analyze>
</tool>
<tool name="Scalasca">
    <compile>
        <allcompilers command="scalasca --instrument" group="scalasca"/>
    </compile>
    <execute>
        <global name="SCORPEnvironment">
            <envvar flag="SCAN_OVERWRITE" value="1"/>
            <envvar flag="EPK_SUMMARY" value="0"/>
            <envvar flag="EPK_TRACE" value="1"/>
        </global>
    </execute>
        <analyze foralllike="epik.esd" depth="1">
	    <utility type="view" command="scalasca" group="cube">
                <argument value="--analyze"/>
                <argument value="%%FILE%%"/>
            </utility>
        </analyze>
</tool>
<tool name="ScoreP-TAU">
    <compile>
        <allcompilers command="scorep" group="scorep"/>
    </compile>
    <execute>
        <global name="SCORPEnvironment">
            <!-- envvar flag="SCOREP_PROFILING_FORMAT" value="TAU_SNAPSHOT"/ -->
        </global>
    </execute>
    <analyze foralllike="profile.cubex" depth="2">
        <utility command="paraprof" group="tau">
                <argument value="%%FILE%%"/>
        </utility>
    </analyze>
</tool>
</toolset.01>
