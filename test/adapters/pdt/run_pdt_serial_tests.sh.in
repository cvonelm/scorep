SCOREP=./scorep

cleanup()
{
rm -f  config.h \
       pdt_serial_c.o \
       pdt_serial_cxx.o
rm -rf scorep-measurement-tmp
}

trap cleanup EXIT

echo "==================="
echo $PWD/run_pdt_backend_tests.sh
echo "==================="

# Setup test environment
touch config.h

# C
$SCOREP  --pdt --nocompiler -v --build-check \
         @CC@ -I. @abs_srcdir@/C/pdt_serial_test.c -c -o pdt_serial_c.o
if [ $? -ne 0 ]; then
    exit 1
fi

# C++
$SCOREP  --pdt --nocompiler -v --build-check \
         @CXX@ -I. @abs_srcdir@/C++/pdt_serial_test.cxx -c -o pdt_serial_cxx.o
if [ $? -ne 0 ]; then
    exit 1
fi

exit 0
