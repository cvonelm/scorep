SCOREP=./scorep

cleanup()
{
rm -f  config.h \
       pdt_mpi_test.o
rm -rf scorep-measurement-tmp
}

trap cleanup EXIT

if [ ! @SCOREP_HAVE_PDT_MPI_INSTRUMENTATION@ ]; then
   exit 0
fi

echo "==================="
echo $PWD/run_pdt_mpi_tests.sh
echo "==================="

# Setup test environment
if [ -d ../build-frontend ]; then
  cd ../build-frontend
else
  cd ../build-backend
fi

make scorep-config-tool-local
. ./scorep_config.dat
touch config.h

# C
$SCOREP  --pdt --nocompiler -v --config=scorep_config.dat \
         @CC@ -I. @abs_srcdir@/C/pdt_mpi_test.c -c -o pdt_mpi_test.o
if [ $? -ne 0 ]; then
    exit 1
fi


exit 0
