## Serial

check_PROGRAMS          += jacobi_serial_c
jacobi_serial_c_sources  = $(SRC_ROOT)test/jacobi/serial/C/jacobi.c  \
                           $(SRC_ROOT)test/jacobi/serial/C/jacobi.h  \
                           $(SRC_ROOT)test/jacobi/serial/C/main.c
jacobi_serial_c_SOURCES  = $(jacobi_serial_c_sources)                          
jacobi_serial_c_CPPFLAGS = $(AM_CPPFLAGS) @COMPILER_INSTRUMENTATION_CPPFLAGS@
jacobi_serial_c_LDADD    = $(LIB_ROOT)libsilc_serial.la

check_PROGRAMS                       += jacobi_serial_c_unistrumented
jacobi_serial_c_unistrumented_SOURCES = $(jacobi_serial_c_sources)
jacobi_serial_c_unistrumented_LDADD   = -lm


## OpenMP

check_PROGRAMS       += jacobi_omp_c
jacobi_omp_c_SOURCES  = $(SRC_ROOT)test/jacobi/OpenMP/C/jacobi.mod.c \
                        $(SRC_ROOT)test/jacobi/OpenMP/C/jacobi.h     \
                        $(SRC_ROOT)test/jacobi/OpenMP/C/main.mod.c   \
                        $(SRC_ROOT)test/jacobi/OpenMP/C/pomp.c
jacobi_omp_c_CFLAGS   = $(AM_CFLAGS) $(OPENMP_CFLAGS)
jacobi_omp_c_CPPFLAGS = $(AM_CPPFLAGS) -I$(PUBLIC_INC_DIR) @COMPILER_INSTRUMENTATION_CPPFLAGS@
jacobi_omp_c_LDADD    = $(LIB_ROOT)libsilc_omp.la

check_PROGRAMS                    += jacobi_omp_c_unistrumented
jacobi_omp_c_unistrumented_SOURCES = $(SRC_ROOT)test/jacobi/OpenMP/C/jacobi.c \
                                     $(SRC_ROOT)test/jacobi/OpenMP/C/jacobi.h \
                                     $(SRC_ROOT)test/jacobi/OpenMP/C/main.c
jacobi_omp_c_unistrumented_CFLAGS  = $(AM_CFLAGS) $(OPENMP_CFLAGS)
jacobi_omp_c_unistrumented_LDADD   = -lm
