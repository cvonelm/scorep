check_PROGRAMS += test_silc_config_bool \
                  test_silc_config_string \
                  test_silc_config_number \
                  test_silc_config_size

test_silc_config_cppflags = $(AM_CPPFLAGS) \
                            -I$(INC_ROOT)vendor/cutest \
                            -I$(INC_ROOT)src/measurement \
                            -I$(INC_ROOT)src/measurement/include \
                            -I$(INC_ROOT)include/silc \
                            -I$(INC_DIR_UTIL)
test_silc_config_ldadd = $(LIB_ROOT)libsilc_serial.la \
                         $(LIB_DIR_UTIL)libsilc_utilities.la

test_silc_config_bool_SOURCES = $(SRC_ROOT)test/measurement/config/bool.c \
                                $(SRC_ROOT)vendor/cutest/CuTest.c
test_silc_config_bool_CPPFLAGS = $(test_silc_config_cppflags)
test_silc_config_bool_LDADD = $(test_silc_config_ldadd)

test_silc_config_number_SOURCES = $(SRC_ROOT)test/measurement/config/number.c \
                                  $(SRC_ROOT)test/measurement/config/error_callback.c \
                                  $(SRC_ROOT)vendor/cutest/CuTest.c
test_silc_config_number_CPPFLAGS = $(test_silc_config_cppflags)
test_silc_config_number_LDADD = $(test_silc_config_ldadd)

test_silc_config_size_SOURCES = $(SRC_ROOT)test/measurement/config/size.c \
                                $(SRC_ROOT)test/measurement/config/error_callback.c \
                                $(SRC_ROOT)vendor/cutest/CuTest.c
test_silc_config_size_CPPFLAGS = $(test_silc_config_cppflags)
test_silc_config_size_LDADD = $(test_silc_config_ldadd)

test_silc_config_string_SOURCES = $(SRC_ROOT)test/measurement/config/string.c \
                                  $(SRC_ROOT)vendor/cutest/CuTest.c
test_silc_config_string_CPPFLAGS = $(test_silc_config_cppflags)
test_silc_config_string_LDADD = $(test_silc_config_ldadd)

TESTS += test_silc_config_bool \
         test_silc_config_string \
         $(SRC_ROOT)test/measurement/config/test_silc_config_number.sh \
         $(SRC_ROOT)test/measurement/config/test_silc_config_size.sh
 
EXTRA_DIST += $(SRC_ROOT)test/measurement/config/test-framework.sh \
              $(SRC_ROOT)test/measurement/config/error_callback.h \
              $(SRC_ROOT)test/measurement/config/test_silc_config_number.sh \
              $(SRC_ROOT)test/measurement/config/test_silc_config_size.sh
