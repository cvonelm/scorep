## -*- mode: makefile -*-

if HAVE_ONLINE_ACCESS_HEADERS

check_PROGRAMS += oa_c_test_mpi

oa_c_test_mpi_SOURCES =                                       \
	$(SRC_ROOT)/test/OA/MPI/C/oa_test_mpi.c

oa_c_test_mpi_CPPFLAGS = $(AM_CPPFLAGS)       \
    -I$(INC_ROOT)src/adapters/include       \
    -I$(INC_ROOT)include/scorep				\
    -I$(INC_ROOT)src/measurement/include    \
    -I$(PUBLIC_INC_DIR)                     \
    -I$(INC_DIR_UTIL)                       \
    -DSCOREP_USER_ENABLE

if SCOREP_COMPILER_IBM
oa_c_test_mpi_CPPFLAGS += -WF,-DSCOREP_USER_ENABLE=1
else
oa_c_test_mpi_CPPFLAGS += -DSCOREP_USER_ENABLE=1
endif

if SCOREP_COMPILER_PGI
oa_c_test_mpi_CPPFLAGS += -DSCOREP_COMPILER_PGI=1
endif

oa_c_test_mpi_LDADD =                        \
    $(LIB_DIR_SCOREP)libscorep_mpi.la

if HAVE_PAPI
oa_c_test_mpi_LDFLAGS = $(SCOREP_PAPI_LDFLAGS) $(SCOREP_PAPI_LIBS) -Wl,-rpath,$(SCOREP_PAPI_LIBDIR)
endif

EXTRA_DIST       += \
    $(SRC_ROOT)/test/OA/MPI/C/run_oa_c_test_mpi.sh

#TESTS += $(srcdir)/../test/OA/MPI/C/run_oa_c_test_mpi.sh

endif #if HAVE_ONLINE_ACCESS_HEADERS
